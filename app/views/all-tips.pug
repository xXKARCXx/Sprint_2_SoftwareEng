doctype html
html
  head
    title Tips Table
    style.
      body { font-family: Arial, sans-serif; }
      table { width: 100%; border-collapse: collapse; margin-top: 20px; }
      th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      th { background-color: #f2f2f2; }
  body
    h1 Game Tips
    table
      thead
        tr
          th ID
          th Author
          th Title
          th Description
          th Game
      tbody
        each item in data  // Make sure the variable name matches
          tr
            td= item.id
            td= item.author
            td= item.title
            td= item.description
            td= item.game